<h1><%= @dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></h1>
<br>
<h3>Email: <%= @student.email %>

<h2>Cohorts</h2>
<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
    </tr>
        <% @cohort.each do |cohort| %>
        <tr><td><%= cohort.first_name %></td>
        <td><%= cohort.last_name %></td>
        <td><%= cohort.email %></td>
        <% end %>
</table>


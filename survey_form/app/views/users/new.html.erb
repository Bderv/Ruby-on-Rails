

<form action=" " method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<label for name='name'>Your Name:</label>
<input type="text" name='user[name]'><br>
<label for name='location'>Dojo Location:</label>
<select name='user[location]' id="">
    <option value="Dallas, TX">Dallas, TX</option>
    <option value="Chicago, IL">Chicago, IL</option>
    <option value="Seattle, WA">Seattle, WA</option>
    <option value="Los Angeles, CA">Los Angeles, CA</option>
</select><br>
<label for name='language'>Language:</label>
<select name='user[language]' id="">
    <option value="Python">Python</option>
    <option value="Javascript">Javascript</option>
    <option value="C++">C++</option>
    <option value="Ruby">Ruby</option>
</select><br>
<label for="comment">Comment (optional):</label><br>
<textarea name='user[comment]' id="" cols="30" rows="10"></textarea><br>
<input type="submit" value="Submit">
</form>